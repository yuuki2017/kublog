
.posting-container {
  bottom: 0;
  position: fixed;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 100%;
  z-index: 999;
}

.input-container {
  display: flex;
  margin: 30rpx 30rpx 20rpx 30rpx;
  border: 1px solid #ebe7e7;
  border-radius: 8rpx;
}

.input-container-textarea {
  font-size: 30rpx;
  letter-spacing: 2rpx !important;
  margin: 10rpx 10rpx 10rpx 10rpx;
  width:100%;
  height: 150rpx;
}

.posting-bottom {
  margin: 10rpx 30rpx 20rpx 30rpx;
  padding: 0rpx 20rpx 10rpx 20rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.in-bar{
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.posting-header {
  margin: 10rpx 30rpx 10rpx 30rpx;
}

.posting-header-text{
  font-size: 30rpx;
}

.limit-text{
  font-size: 30rpx;
  letter-spacing: 2rpx;
  color: #93BEE0;
}
